generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model games {
  id              Int      @id @default(autoincrement())
  date            DateTime @db.Date
  brancos_score   Int
  pretos_score    Int
  goal_difference Int
  brancos_players Json     @db.Json
  pretos_players  Json     @db.Json
  brancos_captain String?
  pretos_captain  String?
  numero          Int      @default(autoincrement()) @db.SmallInt
  season          Int      @default(1) @db.SmallInt
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model players {
  id         BigInt @id @default(autoincrement())
  name       String
  points     Int?   @default(0) @db.SmallInt
  games      Int?   @default(0) @db.SmallInt
  wins       Int?   @default(0) @db.SmallInt
  losses     Int?   @default(0) @db.SmallInt
  draws      Int?   @default(0) @db.SmallInt
  goals_diff Int?   @default(0) @db.SmallInt
  season     Int    @default(1) @db.SmallInt
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model users {
  id       BigInt  @id @default(autoincrement())
  user     String
  password String?
  email    String?
}

model tournament_mocamfe {
  id          Int      @id @default(autoincrement())
  season      Int      @default(2) @db.SmallInt
  round       Int      // 1 = primeira ronda, 2 = quartos, 3 = semi, 4 = final
  position    Int      // posição na árvore nesta ronda
  player_id   BigInt   // id do jogador nesta posição
  opponent_id BigInt?  // id do oponente (null se ainda não definido)
  winner_id   BigInt?  // id do vencedor (null se ainda não jogado)
  game_id     Int?     // id do jogo onde se defrontaram (null se pendente)

  @@unique([season, round, position])
  @@index([player_id])
  @@index([opponent_id])
}
